<div>
  <p>Show simple example modal.</p>
  <button {{action "toggleModal"}}>Toggle Modal</button>
</div>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    Oh hai there!
  {{/modal-dialog}}
{{/if}}

<hr>

<div>
  <p>Basic modal.</p>
  <button {{action "toggleBasic"}}>Toggle Modal</button>
</div>

{{#if isShowingBasic}}
  {{#modal-dialog close="toggleBasic"
                  targetAttachment="center"
                  translucentOverlay=true}}
    <h1>Super cute modal here</h1>
    <p>Oh hai there!</p>
    <button {{action 'toggleBasic'}}>Close</button>
  {{/modal-dialog}}
{{/if}}

<hr>

<div>
